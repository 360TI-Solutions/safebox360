import React from 'react';
import Chart from 'react-apexcharts';
import { getChartApexDefaultOptions } from './composables/apexChartOptions.js';

function ChartApex() {
  var theme = (getComputedStyle(document.body).getPropertyValue('--bs-theme')).trim();
  var whiteRgb = (getComputedStyle(document.body).getPropertyValue('--bs-white-rgb')).trim();
  
  var chartOptions = getChartApexDefaultOptions();
  
  chartOptions.labels = ['Sunday', 'Monday', 'Tuesday', 'Wednesday', 'Thursday', 'Friday', 'Saturday'];
  chartOptions.plotOptions = {
    radar: {
      size: 140,
      polygons: {
        strokeColors: 'rgba('+ whiteRgb +', .25)',
        strokeWidth: 1,
        connectorColors: 'rgba('+ whiteRgb +', .25)',
        fill: { colors: ['rgba('+ whiteRgb +', .05)', 'rgba('+ whiteRgb +', .1)'] }
      }
    }
  };
  chartOptions.title.text = 'Radar with Polygon Fill';
  chartOptions.colors = [theme];
  chartOptions.markers = { size: 4, colors: [theme], strokeColor: theme, strokeWidth: 2 };
  chartOptions.tooltip = { y: { formatter: function(val) { return val } } };
  chartOptions.yaxis.tickAmount = 7;
  
  var chartData = [
    { name: 'Series 1', data: [20, 100, 40, 30, 50, 80, 33] }
  ];
  
  return (
    <div>
      <Chart type="radar" options={chartOptions} series={chartData} height="350" />
    </div>
  )
}

export default ChartApex;