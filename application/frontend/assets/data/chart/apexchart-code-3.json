import React from 'react';
import Chart from 'react-apexcharts';
import { getChartApexDefaultOptions } from './composables/apexChartOptions.js';

function ChartApex() {
  var theme = (getComputedStyle(document.body).getPropertyValue('--bs-theme')).trim();
  var white = (getComputedStyle(document.body).getPropertyValue('--bs-white')).trim();
  var borderColor = (getComputedStyle(document.body).getPropertyValue('--bs-border-color')).trim();
  
  var chartOptions = getChartApexDefaultOptions();
  
  chartOptions.dataLabels = { enabled: false };
  chartOptions.stroke = { curve: 'smooth', width: 2 };
  chartOptions.colors = [theme, white];
  chartOptions.xaxis.type = 'datetime';
  chartOptions.xaxis.categories = ['2024-09-19T00:00:00', '2024-09-19T01:30:00', '2024-09-19T02:30:00', '2024-09-19T03:30:00', '2024-09-19T04:30:00', '2024-09-19T05:30:00', '2024-09-19T06:30:00'];
  chartOptions.xaxis.axisBorder = {
    show: true,
    color: borderColor,
    height: 1,
    width: '100%',
    offsetX: 0,
    offsetY: -1
  };
  chartOptions.xaxis.axisTicks = {
    show: true,
    borderType: 'solid',
    color: borderColor,
    height: 6,
    offsetX: 0,
    offsetY: 0
  };
  chartOptions.tooltip = { x: { format: 'dd/MM/yy HH:mm' } };
  
  var chartData = [
    { name: 'series1', data: [31, 40, 28, 51, 42, 109, 100] }, 
    { name: 'series2', data: [11, 32, 45, 32, 34, 52, 41] }
  ];
  
  return (
    <div>
      <Chart type="area" options={chartOptions} series={chartData} height="250" />
    </div>
  )
}

export default ChartApex;